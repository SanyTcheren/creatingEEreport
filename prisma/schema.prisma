// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model UserModel {
  id       Int    @id @default(autoincrement())
  email    String
  password String
  name     String
}

model OilWellModel {
  id     Int    @id @default(autoincrement())
  well   String
  detail String
  start  String
  end    String

  ReportModel   ReportModel? @relation(fields: [reportModelId], references: [id])
  reportModelId Int?
}

model ReportModel {
  id       Int            @id @default(autoincrement())
  type     String
  number   String
  field    String
  bush     String
  dataFile String?
  wells    OilWellModel[]
}
